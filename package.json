{
  "name": "stellar-anchor-server",
  "version": "0.0.1",
  "description": "An example implementation of a SEP-6 (and related SEPs) compliant webserver for the Stellar community.",
  "author": "Alex Cordeiro (alexc@stellar.org)",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.0.29",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.17.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.15.4",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.10",
    "sqlite3": "^4.0.3",
    "ts-node-dev": "^1.0.0-pre.40",
    "typeorm": "0.2.18"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "set debug=* && ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "tsc && node ./build/app.js",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "test": "DATABASE=test.sqlite NODE_ENV=test nyc mocha -r ts-node/register src/**/*.spec.ts; rm -rf test.sqlite",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  }
}
